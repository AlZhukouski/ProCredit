extends common/layout-log-in

block content
  main.main
    .registration
      .registration__banner
      .registration__container
        .registration__form-wrap
          h1.registration__title Войти
          form.form.registration__form
            .form__line
              input#login.form__input(type="text", name="login", required)
              label.form__label(for="login") Логин/номер телефона
            .form__line
              input#pass.form__input(type="password", name="pass", required)
              label.form__label(for="pass") Ваш пароль
              .form__pass-eye
            button.form__submit.btn(type="submit") Войти
            p.form__text У Вас нет аккаунта?
              |
              |
              a.form__link(href="/registration.html") Зарегистрироваться

